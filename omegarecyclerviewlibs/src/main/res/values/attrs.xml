<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OmegaRecyclerView">
        <attr name="itemSpace" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:dividerHeight" />
        
        <attr name="divider" format="reference"/>
        <attr name="heightDivider" format="dimension"/>
        <attr name="paddingDivider" format="dimension"/>
        <attr name="showDivider">
            <flag name="none" value="0" />
            <flag name="beginning" value="1" />
            <flag name="middle" value="2" />
            <flag name="end" value="4" />
        </attr>
        <attr name="alphaDivider" format="float"/>
        <attr name="emptyView" format="reference" />
        <attr name="paginationLayout" format="reference"/>
        <attr name="paginationErrorLayout" format="reference"/>
    </declare-styleable>

    <declare-styleable name="OmegaRecyclerView_Layout">
        <attr name="layout_section" format="enum">
            <enum name="header" value="0"/>
            <enum name="footer" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="OmegaPagerRecyclerView">
        <attr name="slideOnFling" format="boolean"/>
        <attr name="android:orientation"/>
        <attr name="pageSize" format="float"/>
        <attr name="transitionTime" format="integer"/>
        <attr name="slideOnFlingThreshold" format="integer"/>
        <attr name="infinite" format="boolean"/>
    </declare-styleable>

</resources>
